<div class="container p-4">
    <div class="row">
         <div class="col-md-5 mx-auto">
              <div class="card">
                    <div class="card-header">
                        <h2>Crear Partida</h2> 
                    </div>
                    <div class="card-body" style="text-align: center;">
                        {{#if room}}
                            <a href="http://{{url}}/room?r={{room}}">http://{{url}}/room?r={{room}}</a>
                        {{else}}
                            <form action="/create" method="post">
                                <button type="submit" class="btn btn-primary form-control"><i class="fas fa-link"></i> Generar Link</button> 
                            </form>
                        {{/if}}                       
                    </div>
              </div>
         </div>
    </div>
</div>